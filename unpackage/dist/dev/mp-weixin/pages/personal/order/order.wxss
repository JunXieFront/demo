
.component {
	height: 200px;
	width: 100%;
}
.top {
	height: 30px;
	width: 100%;	
	background-color: #e3e7f1;
	border-bottom: 1px solid #999999;
	border-top:  1px solid #999999;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.time {
	line-height: 30px;
	margin-left: 2px;
	color: #808080;
	font-size: 14px;
	width: 85%;
	margin-left: 5px;
}
.case {
	line-height: 30px;
	font-size: 15px;
	color: #333333;
	width: 15%;
}
.detail {
	height: 130px;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.img {
	height: 120px;
	width: 30%;
	background-color: #bae8e8;
	margin-right: 15px;
	margin-top: 5px;
	margin-left: 5px;
}
.text {
	height: 100px;
	width: auto;
	width: 70%;
	margin-top: 10px;
}
.small_text{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	font-size: 18px;
}
.headline {
	height: 90px;
	font-size: 20px;
}
.money {
	color: red;
	font-size: 18px;
	margin-left: 2px;
	-webkit-box-flex: 3;
	-webkit-flex: 3;
	    -ms-flex: 3;
	        flex: 3;
}
.number {
	font-size: 18px;
	color: black;
	margin-right: 2px;
	-webkit-box-flex: 3;
	-webkit-flex: 3;
	    -ms-flex: 3;
	        flex: 3;
}
.bottom{
	width: 100%;
	height: 40px;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
	line-height: 40px;
}
.kind{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	width: 70px;
	height: 25px;
	line-height: 25px;
	font-size: 17px;
	border: 10px;
	text-align: center;
	background-color: #64e291;
	cursor: pointer;
	margin-left: 7px;
	color: #2C405A;
	border-radius: 8px;
	display: inline-block;
}
.btn{
	width: 80px;
	height: 20px;
	cursor: pointer;
	border: 1px solid black;
	border-radius: 15px;
	font-size: 14px;
	line-height: 20px;
	text-align: center;
	margin-right: 10px;
	margin-top: 2px;
}

