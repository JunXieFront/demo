.com_img {
  height: 40%;
  width: 100%;
}
.top_img {
  height: 80px;
  width: 80px;
  margin: 0 auto;
  background-color: #2c405a;
  border-radius: 50%;
  margin-top: 20px;
}
.top_txt {
  height: 20px;
  width: 100%;
  text-align: center;
  line-height: 20px;
  font-size: 13px;
  margin-top: 9px;
}
.top_phone {
  height: 20px;
  width: 100%;
  text-align: center;
  line-height: 20px;
  font-size: 10px;
}
.btn_msg {
  height: 50px;
  width: 80%;
  margin: 0 auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin-top: 15px;
  border: 1px solid #2C405A;
  border-radius: 5px;
  line-height: 50px;
}
.btn_img {
  margin-left: 10px;
  height: 20px;
  width: 20px;
  margin-top: 15px;
}
.msg_txt {
  width: 60%;
  height: 100%;
  margin-left: 15px;
}
.msg_icon {
  height: 0;
  width: 0;
  border-top: 10px solid transparent;
  border-bottom: 10px solid transparent;
  border-left: 10px solid #2C405A;
  margin-top: 15px;
}

